<div ng-controller="MainController as controller">


  <nav class="navbar navbar-default navbar-fixed-top navbar-list-selection col-xs-offset-4 col-xs-4">
    <div class="container-fluid">
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          
        </ul>

        <ul class="nav navbar-nav navbar-right">
          
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>


  <div class="jumbotron banner">
    <h1>Kawaya Diary</h1>
  </div>
  <!-- filter panel -->
  <div class="container">
    <button type="button" class="btn btn-primary col-xs-2 col-xs-offset-5 filter-button" data-toggle="collapse" data-target="#filterOption" aria-expanded="false" aria-controls="collapseExample"><span class="glyphicon glyphicon-filter" aria-hidden="true"></span>Filter</button>
  
    <div class="collapse col-xs-12" id="filterOption">

      <div class="row">
          <div class="col-xs-6 col-md-2 col-md-offset-3">
            <div class="caption">
              <h4 style="text-align:center">Name</h4>
                <p><a class="btn btn-primary" role="button" ng-click="controller.sortBy('name')">A-Z</a>
                <a class="btn btn-default" role="button" ng-click="controller.sortBy('-name')">Z-A</a></p>
            </div>
          </div>
          <div class="col-xs-6 col-md-2">
            <div class="caption">
              <h4 style="text-align:center">Age</h4>
                <p><a class="btn btn-primary" role="button" ng-click="controller.sortBy('-dob')">Asc</a> 
                <a class="btn btn-default" role="button" ng-click="controller.sortBy('dob')">Dsc</a></p>
            </div>
          </div>
          <div class="col-xs-6 col-md-2">
            <div class="caption">
              <h4 style="text-align:center">Sex</h4>
                <p><a class="btn btn-primary" role="button" ng-click="controller.sortBy('-sex')">M</a> 
                <a class="btn btn-default" role="button" ng-click="controller.sortBy('sex')">F</a></p>
            </div>
          </div>
      </div>
      
    </div>
  </div>



  <!-- search bar -->
  <div class="container searchbar input-group col-xs-12">
   
  </div>

  <!-- filter button -->
  <div class="filter button">
    
  </div>

  <!-- main panel -->
  <div class="">
    <div ng-repeat="user in controller.allUserData | orderBy:controller.propName:controller.reverse" class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
      <button type="button" class="btn btn-default container-fluid user">
        <div class="container-fluid user-container">
            <div class="col-xs-3 image-container">
              <img src="src/image/user-icon.png" class="img-rounded img-responsive image-profile">
            </div>
            <div class="col-xs-9 info">
              <div class="row">
                <div class="col-xs-12">
                  <h4>Name: {{user.name}}</h4>
                </div>
                <div class="col-xs-12">
                  UserID: {{user.userid}}
                </div>
              </div>
              <div class="row secondary-info">
                <div class="col-xs-12">Age: {{controller.calAge(user.dob)}}</div>
                <div class="col-xs-12">Sex: {{user.sex}}</div>
                <div class="col-xs-12">Date of Birth: {{user.dob}}</div>
                <div class="col-xs-12">Contact: {{user.contact}}</div>
              </div>
            </div>
        </div>
      </button>
    </div>
  </div>
</div>



